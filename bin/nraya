#!/usr/bin/env ruby

require 'rubygems'
require 'main'
require 'board'
require 'matrix'

$stdout.print "> Give me the n: "
$stdout.flush
n = gets.to_i

$stdout.print "> Give me the number of players: "
$stdout.flush
x = gets.to_i

$game = Game.new(n, x)

begin
  $game.initGame()
rescue
