#!/usr/bin/env ruby

require 'rubygems'
require 'main'
require 'board'
require 'nrayaex'

$stdout.print "> Give me the n: "
$stdout.flush
n = gets.to_i

$stdout.print "> Give me the number of players: "
$stdout.flush
x = gets.to_i

$game = Game.new(n, x)

begin
  $game.initGame()
rescue BigNumberError
  puts "Exception: Number of selected row too big"
rescue
  puts "Exception: 404 - Not found"
end
